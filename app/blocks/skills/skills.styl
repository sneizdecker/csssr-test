.skills
	margin-bottom 60px
	display flex
	flex-wrap wrap
	flex-direction column
	justify-content flex-start
	width 100%
	height 260px

	&__item
		display none
		float left

	&__name
		position relative
		padding-left 28px
		width 250px
		min-height 30px
		cursor pointer

	&__text
		margin-top 8px
		margin-bottom 4px
		float left
		font-size 21px
		line-height 23px
		color #000

	&__item + &__name:before
		position absolute
		top 0
		left 0
		display block
		content ''
		sprite($skill_false)

	&__item:checked + &__name:before
		sprite($skill_true)
